<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spiritual">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPIRITUAL"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELLNESS SECTION"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/a"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/Inspirational"
        android:src="@drawable/mustread"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspirational"
        android:textSize="20dp"
        android:layout_below="@id/Inspirational"
        android:layout_marginLeft="70dp"
        android:id="@+id/ins"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotes"
        android:textSize="20dp"
        android:layout_below="@id/ins"
        android:layout_marginLeft="95dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@id/Inspirational"
        android:id="@+id/BibleV"
        android:src="@drawable/positive"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bible Verses"
        android:textSize="20dp"
        android:layout_below="@id/BibleV"
        android:layout_toRightOf="@id/Inspirational"
        android:layout_marginLeft="80dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/Inspirational"
        android:id="@+id/LifeTB"
        android:src="@drawable/positive"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Teaching"
        android:textSize="20dp"
        android:layout_below="@id/LifeTB"
        android:layout_marginLeft="60dp"
        android:id="@+id/Life"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of Buddha"
        android:textSize="20dp"
        android:layout_below="@id/Life"
        android:layout_marginLeft="80dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@id/LifeTB"
        android:layout_below="@id/BibleV"
        android:id="@+id/Prayer"
        android:src="@drawable/positive"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prayer"
        android:textSize="20dp"
        android:layout_below="@id/Prayer"
        android:layout_toRightOf="@id/LifeTB"
        android:layout_marginLeft="110dp" />

</RelativeLayout>